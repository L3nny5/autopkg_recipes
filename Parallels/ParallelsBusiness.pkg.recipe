<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the latest ParallelsDesktop disk image and puts it together with a Deploy pkg including the License key.</string>
	<key>Identifier</key>
	<string>com.github.l3nny5.pkg.ParallelsBusiness</string>
	<key>Input</key>
	<dict>
		<key>LICENSE_KEY</key>
		<string>XXXXXX-XXXXXX-XXXXXX-XXXXXX-XXXXXX</string>
		<key>deploy_tool_url</key>
		<string>https://download.parallels.com/desktop/tools/pd-autodeploy.zip</string>
	</dict>
	<key>MinimumVersion</key>
	<string>0.6.1</string>
	<key>ParentRecipe</key>
	<string>com.github.l3nny5.download.ParallelsDesktop</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkgdirs</key>
				<dict>
					<key>Image</key>
					<string>0775</string>
				</dict>
				<key>pkgroot</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%</string>
			</dict>
			<key>Processor</key>
			<string>PkgRootCreator</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>destination_path</key>
				<string>%pkgroot%/Image</string>
				<key>source_path</key>
				<string>%pathname%</string>
			</dict>
			<key>Processor</key>
			<string>Copier</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>filename</key>
				<string>pd-autodeploy.zip</string>
				<key>url</key>
				<string>%deploy_tool_url%</string>
			</dict>
			<key>Processor</key>
			<string>URLDownloader</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>archive_path</key>
				<string>%pathname%</string>
			</dict>
			<key>Processor</key>
			<string>Unarchiver</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pattern</key>
				<string>%pkgroot%/Image/*/Parallels Desktop Autodeploy.pkg</string>
			</dict>
			<key>Processor</key>
			<string>FileFinder</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>destination_path</key>
				<string>%found_filename%/Parallels Desktop DMG/</string>
				<key>source_path</key>
				<string>%pkgroot%/Image/%NAME%-%MAJOR_VERSION%.dmg</string>
			</dict>
			<key>Processor</key>
			<string>Copier</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>file_content</key>
				<string>license_key="%LICENSE_KEY%"
vm_register_mode="Private"
vm_reset_hwid="no"
vm_deploy_mode="Copy"
updates_url="Parallels"
updates_auto_check="0"
cep_participation="off"
admin_password_to_create_vm="on"
admin_password_to_add_vm="on"
admin_password_to_clone_vm="on"
show_developers_menu="no"</string>
				<key>file_path</key>
				<string>%found_filename%/License Key and Configuration/deploy.cfg</string>
			</dict>
			<key>Processor</key>
			<string>FileCreator</string>
		</dict>
	</array>
</dict>
</plist>
